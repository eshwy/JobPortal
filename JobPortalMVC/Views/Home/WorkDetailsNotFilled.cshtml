@{
    ViewData["Title"] = "WorkDetailsNotFilled";
    Layout = null;
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<link href="https://formden.com/static/cdn/bootstrap-iso.css" rel="stylesheet" />

<link rel="stylesheet" href="~/css/SignUp.css">
<div class="container">
    <div class="form-wrap">
        <header>
            <h1>Work Details</h1>
        </header>
        <form asp-controller="Home" asp-action="WorkDetailsNotFilled">
            <div id="Container1">
                <div id="WorkDiv0">
                    <div class="form-group">
                        <label for="CompanyName">Organization Name</label>
                        <input id="CompanyName" name="CompanyName" placeholder="Organization Name" required />
                    </div>
                    <div class="form-group">
                        <label for="WorkedFrom">Worked From</label>
                        <input id="WorkedFrom" name="WorkedFrom" type="number" placeholder="Worked From 2010" required />
                    </div>
                    <div class="form-group">
                        <label for="WorkedTill">Worked Till</label>
                        <input id="WorkedTill" name="WorkedTill" type="number" placeholder="Worked Till 2019" required />
                    </div>
                    <div class="form-group">

                    </div>
                    <hr align="center" width="85%" style="height:2px;border-width:0;color:gray;background-color:gray" />
                </div>
            </div>
            <button type="submit" class="btn btn-block btn-success">Next</button>
        </form>
        <button class="btn btn-block" id="addWork">Add More</button>
        <button class="btn btn-block" id="removeWork">Remove</button>
    </div>
</div>

<script>
    document.getElementById('addWork').onclick = duplicateWork;
    document.getElementById('removeWork').onclick = removeduplicateWork;

    var i = 0;
    function duplicateWork() {
        var original = document.getElementById('WorkDiv' + i);

        var clone = original.cloneNode(true);

        clone.id = "WorkDiv" + ++i;
        original.parentNode.appendChild(clone);
        $("#WorkDiv" + i).find('input').val(' ');
    }
    function removeduplicateWork() {

        var list = document.getElementById('WorkDiv' + i).remove();
        i -= 1;
    }
</script>

